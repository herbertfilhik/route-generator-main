    stages {
        stage('Build') {
            steps {
                // Comandos para construir a aplicação
                echo 'Construindo...'
                // Exemplo: sh 'make build' ou bat 'build.bat'
            }
        }
        stage('Test') {
            steps {
                // Comandos para executar testes
                echo 'Testando...'
                // Exemplo: sh 'make test' ou bat 'test.bat'
            }
        }
        stage('Deploy') {
            steps {
                // Comandos para deploy
                echo 'Deploying...'
                // Exemplo: sh 'make deploy' ou bat 'deploy.bat'
            }
        }
    }
}
